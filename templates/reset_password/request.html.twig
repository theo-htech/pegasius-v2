{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{ 'reset_password.title' | trans }}{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <section class="h-100 gradient-form" style="background-color: #eee;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-10">
                    <div class="card rounded-3 text-black">
                        <div class="row g-0">
                            <div class="col-lg-6">
                                <div class="card-body p-md-5 mx-md-4">

                                    <div class="text-center">
                                        <h4 class="mt-1 mb-2 pb-1">O.do.P</h4>
                                        <h5 class="mb-2 pb-1">{{ 'reset_password.title' | trans }}</h5>
                                    </div>
                                    {{ form_start(requestForm) }}
                                    {% if not requestForm.vars.valid %}
                                        <div class="alert alert-danger list-error">
                                            {{ form_errors(registrationForm) }}
                                        </div>
                                    {% endif %}
                                    <div class="form-outline mb-4">
                                        <label for="inputEmail">{{ 'reset_password.email' | trans }}</label>
                                        <input type="email" value="{{ field_value(requestForm.email) }}"
                                               name="{{ field_name(requestForm.email) }}" id="inputEmail"
                                               class="form-control"
                                               required>
                                        <div>
                                            <small>
                                               {{ 'reset_password.info' | trans }}
                                            </small>
                                        </div>
                                    </div>


                                    <div>
                                        <button class="btn btn-primary btn-block mb-4 mt-2" type="submit">
                                            {{ 'reset_password.send' | trans }}
                                        </button>
                                        <a class="btn btn-secondary btn-block mb-4 mt-2 ms-4"
                                           href="{{ path('app_login') }}">{{ 'login.login_in' | trans }}</a>
                                    </div>

                                    {{ form_end(requestForm) }}
                                </div>
                            </div>
                            {{ include('public_template/login_register_img.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
